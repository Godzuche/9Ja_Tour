<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/root_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp"
        app:contentPadding="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_city"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/placeholder"/>
            <TextView
                android:id="@+id/text_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_city"
                app:layout_constraintStart_toStartOf="@id/image_city"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="8dp"
                android:padding="16dp"
                android:text="City Name"
                style="?textAppearanceHeadline6"/>

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_delete"
                android:layout_margin="8dp"
                app:tint="#9e9e9e" />

            <ImageView
                android:id="@+id/icon_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/icon_delete"
                app:layout_constraintTop_toBottomOf="@id/image_city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_favorite_bordered"
                android:layout_margin="8dp"
                app:tint="#9e9e9e" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>